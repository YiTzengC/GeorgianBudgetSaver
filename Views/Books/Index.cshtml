@model IEnumerable<GeorgianBudgetSaver.Models.Book>

<div class="book-container">
        <h1>Books</h1>
        <form class="d-flex form-search" asp-action="Index" method="post">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Title" aria-label="Search" name="SearchString">
                <button class="btn btn-outline-dark" type="submit">Search</button>
                <a class="btn btn-outline-dark" asp-action="Index" type="button">All Books</a>
            </div>
        </form>
    <div class="book-table-container">
        <table class="table table-striped table-dark mb-0 table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BoughtDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InStock)
                    </th>
                    <th>
                        Program
                    </th>
                    @if (User.IsInRole("Administrator"))
                    {
                        <th style="text-align:center">
                            Action
                        </th>
                    }else if(User.IsInRole("Customer")){ 
                        <th style="text-align:center">
                            Purchase
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoughtDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InStock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseProgram.Title)
                    </td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <td style="text-align:center">
                            <a type="button" class="btn btn-edit" asp-action="Edit" asp-route-id="@item.BookId"><i class="bi bi-pencil-square"></i></a>
                            <a type="button" class="btn btn-delete" asp-action="Delete" asp-route-id="@item.BookId"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    }
                    else if (User.IsInRole("Customer"))
                    {
                        <td style="text-align:center">
                            <a type="button" class="btn btn-outline-light btn-sm" asp-route-id="@item.BookId"><i class="bi bi-cart-plus-fill" style="font-size:1rem; line-height:inherit"></i> Add To Cart</a>
                        </td>
                    }
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>