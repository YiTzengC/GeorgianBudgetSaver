@model GeorgianBudgetSaver.Models.Account


<h1>Account Info</h1>

<div class="col-md-6 form-card">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
    <div>
        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.AccountId">Edit</a>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</div>
